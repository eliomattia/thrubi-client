{
  "name": "thrubi-client",
  "version": "0.1.0",
  "description": "Thrubi App",
  "main": "truffle-config.js",
  "homepage": "https://eliomattia.github.io/thrubi-client",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev":        "lite-server",
    "test":       "react-scripts test",
    "start":      "set HTTPS=true&&react-scripts start",
    "build":      "react-scripts build",
    "eject":      "react-scripts eject",
    "predeploy":  "npm run build",
    "deploy":     "gh-pages -d build"
  },
  "author": "elio.mattia@gmail.com",
  "license": "ISC",
  "dependencies": {
    "bootstrap-react": "^0.3.1",
    "node-sass": "^4.13.1",
    "react": "^16.8.6",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.0.1",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.3.0",
    "request": "^2.88.0",
    "web3": "^1.0.0-beta.55"
  },
  "devDependencies": {
    "bootstrap": "^4.4.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "gh-pages": "^2.2.0",
    "lite-server": "^2.3.0",
    "nodemon": "^1.17.3",
    "truffle": "5.0.2",
    "truffle-contract": "3.0.6"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "react/jsx-pascal-case": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
